---
import { projects } from '@/lib/data';
import { CardContent, CardFooter, CardHeader, CardTitle } from './ui/card';
import { Github } from 'lucide-react';
import { GlassCard } from './ui/glass-card';
---

<section
   id='projects'
   class='py-12 relative'
>
   <div class='container max-w-4xl mx-auto px-6 md:px-4'>
      <h2 class='text-2xl font-bold mb-8 text-center md:text-left section-heading'>ðŸš€ Projects</h2>

      <div class='grid grid-cols-1 md:grid-cols-2 gap-6'>
         {projects.map((project, index) => (
            <div 
               class='project-card'
               style={`animation-delay: ${index * 0.2}s`}
            >
               <GlassCard className='group overflow-hidden dark:border-purple-500/10 h-full flex flex-col'>
                  <CardHeader className='bg-linear-to-r from-purple-500/5 to-pink-500/5'>
                     <CardTitle className='text-center md:text-left group-hover:text-purple-500 transition-colors duration-300'>
                        {project.title}
                     </CardTitle>
                  </CardHeader>
                  <CardContent className='grow'>
                     <ul class='list-disc ml-4 space-y-1 text-sm group-hover:space-y-2 transition-all duration-300'>
                        {project.description.map((desc, i) => (
                           <li 
                              class='text-muted-foreground project-item'
                              style={`animation-delay: ${index * 0.2 + i * 0.1}s`}
                           >
                              {desc}
                           </li>
                        ))}
                     </ul>
                  </CardContent>
                  <CardFooter className='flex justify-center md:justify-start items-center border-t border-border/30 bg-linear-to-r from-purple-500/5 to-pink-500/5'>
                     <a
                        href={project.github}
                        target='_blank'
                        rel='noopener noreferrer'
                        class='flex items-center text-sm text-muted-foreground hover:text-purple-500 transition-colors github-link pt-8'
                     >
                        <Github className='h-4 w-4 mr-2 github-icon' />
                        View on GitHub ðŸ”—
                     </a>
                  </CardFooter>
               </GlassCard>
            </div>
         ))}
      </div>
   </div>
</section>

<style>
   @keyframes fadeInUp {
      from {
         opacity: 0;
         transform: translateY(20px);
      }
      to {
         opacity: 1;
         transform: translateY(0);
      }
   }

   @keyframes fadeInLeft {
      from {
         opacity: 0;
         transform: translateX(-10px);
      }
      to {
         opacity: 1;
         transform: translateX(0);
      }
   }

   .section-heading {
      opacity: 0;
      animation: fadeInUp 0.6s ease-out forwards;
   }

   .project-card {
      opacity: 0;
      animation: fadeInUp 0.6s ease-out forwards;
   }

   .project-card:hover {
      transform: translateY(-4px);
      transition: transform 0.3s ease;
   }

   .project-item {
      opacity: 0;
      animation: fadeInLeft 0.3s ease-out forwards;
   }

   .github-link {
      transition: all 0.3s ease;
   }

   .github-link:hover {
      transform: scale(1.05);
   }

   .github-link:hover .github-icon {
      transform: rotate(12deg);
   }

   .github-icon {
      transition: transform 0.3s ease;
   }

   @media (prefers-reduced-motion: reduce) {
      .section-heading,
      .project-card,
      .project-item {
         animation: none;
         opacity: 1;
         transform: none;
      }

      .project-card:hover,
      .github-link:hover,
      .github-link:hover .github-icon {
         transform: none;
      }
   }
</style>
